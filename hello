@Test
void getFreshAccessToken_tokenReturnedSuccessfully() {
    LoginData freshLoginData = new LoginData();
    JSONObject token = new JSONObject();
    token.put(StartAnyWhereConstants.ACCESS_TOKEN_KEY, "fresh-token");

    when(saviyntLogin.getFreshLoginData()).thenReturn(freshLoginData);
    when(saviyntClient.getAuthToken(freshLoginData)).thenReturn(token);

    String result = userService.getFreshAccessToken();
    assertEquals("fresh-token", result);
}

@Test
void getFreshAccessToken_loginNull_returnsNull() {
    userService.saviyntLogin = null;
    String result = userService.getFreshAccessToken();
    assertNull(result);
}

@Test
void getFreshAccessToken_loginDataNull_returnsNull() {
    when(saviyntLogin.getFreshLoginData()).thenReturn(null);
    String result = userService.getFreshAccessToken();
    assertNull(result);
}
