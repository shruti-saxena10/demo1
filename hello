    @Test
    void testProcessJson_WhenJsonProcessingExceptionThrown_ShouldReturnNull() throws Exception {
        // Arrange
        String invalidJson = "invalid-json";
        Mockito.when(objectMapper.readValue(eq(invalidJson), eq(HttpHeaders.class)))
               .thenThrow(new JsonProcessingException("Invalid JSON") {});

        // Act
        HttpHeaders result = myService.processJson(invalidJson);

        // Assert
        assertNull(result, "Expected httpHeaders to be null when exception occurs");
    }
}
