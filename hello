@Test
void testAddClientConfiguration_HeaderEmpty() {
    // Arrange
    String token = "mockToken";
    String emptyHeader = " "; // deliberately blank
    ClientConfigurationRequest clientConfigRequest = new ClientConfigurationRequest();
    clientConfigRequest.setClientId("testClient");
    clientConfigRequest.setClientName("testName");
    clientConfigRequest.setOrgName("testOrg");

    // Act
    ResponseEntity<Object> response = startAnywhereController.addClientConfiguration(
            emptyHeader, token, clientConfigRequest);

    // Assert
    assertEquals(HttpStatus.BAD_REQUEST, response.getStatusCode());
    assertEquals("Header cannot be empty", response.getBody());

    // Verify that service is never called
    Mockito.verify(clientConfigService, Mockito.never())
           .createClientConfiguration(Mockito.any(), Mockito.any(), Mockito.any());
}
