@Test
void testLoadLoginData_exceptionInDockerSecretsUtil_logsInfo() {
    try (
        MockedStatic<DockerSecretsUtil> dockerMock = mockStatic(DockerSecretsUtil.class);
        MockedStatic<InfoTypeLogEventHelper> infoLogMock = mockStatic(InfoTypeLogEventHelper.class)
    ) {
        // Arrange: force DockerSecretsUtil.load() to throw an exception
        dockerMock.when(DockerSecretsUtil::load).thenThrow(new RuntimeException("boom"));

        // Act
        LoginData data = saviyntLogin.loadLoginData();

        // Assert: method returns null since exception occurred
        assertNull(data);

        // Verify log was called with expected arguments
        infoLogMock.verify(() -> InfoTypeLogEventHelper.logInfoEvent(
            SaviyntLogin.class.getName(),
            "docker secrets not recived:" + "User name not found>>>>password not found>>>"
        ));
    }
}
