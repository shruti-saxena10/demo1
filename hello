import static org.mockito.Mockito.*;

import org.junit.jupiter.api.Test;
import org.mockito.Mockito;

class SaviyntLoginTest_MockMethod {

    @Test
    void testMockLoadLoginData() {
        // Create a spy (partial mock) of SaviyntLogin
        SaviyntLogin spyLogin = Mockito.spy(new SaviyntLogin());

        // Prepare fake LoginData
        LoginData fakeData = new LoginData();
        fakeData.setUsername("mockUser");
        fakeData.setPassword("mockPass");

        // Mock loadLoginData() to return fakeData
        doReturn(fakeData).when(spyLogin).loadLoginData();

        // Call getLoginData(), which internally calls loadLoginData()
        LoginData result = spyLogin.getLoginData();

        // Verify it returned mocked value
        assertNotNull(result);
        assertEquals("mockUser", result.getUsername());
        assertEquals("mockPass", result.getPassword());

        // Verify that loadLoginData() was actually called once
        verify(spyLogin, times(1)).loadLoginData();
    }
}
